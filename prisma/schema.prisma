generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model QuantityType {
  id    Int    @id @default(autoincrement())
  name  String @unique
  units Unit[]
}

model Unit {
  id     Int          @id @default(autoincrement())
  name   String       @unique
  type   QuantityType @relation(fields: [typeId], references: [id])
  typeId Int
}

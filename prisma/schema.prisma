generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model QuantityType {
  id    Int    @id @default(autoincrement())
  name  String @unique
  units Unit[]
}

model Unit {
  id     Int            @id @default(autoincrement())
  name   String         @unique
  symbol String
  types  QuantityType[]
  a      Float
  b      Float
  c      Float
  d      Float
}

